@import url('https://fonts.googleapis.com/css?family=Noto+Sans|Open+Sans|Roboto');

$header-height = 70px
$green = #8ac858

body
  font-family 'Roboto'
  margin 0
  padding 0
  color #4d4d4d
  background-color #f4f4f4

a
  text-decoration none
  color inherit

.header
  background-color $green
  height $header-height
  
  .nav
    // display inline-block
    float left
    position relative
    letter-spacing 1px
    list-style none
    padding-left 50px
    margin 0 auto
    
    // background-color tomato
    width fit-content
    
    li
      display inline-block
      margin 0 5px
      
      a
        color #d8ffbc
        font-weight bold
        text-decoration none
        line-height $header-height
        text-transform uppercase

        transition all .3s
        &:hover
          color #f4f4f4
  
  .avatar-container
    display inline-block
    float right
    padding-right 50px
    line-height $header-height
    color white
    .avatar
      display inline-block
      margin 0 auto
      margin-left 5px
      width 45px
      height 45px
      vertical-align middle
      // line-height $header-height
      border-radius 50%
      background-color tomato
      background-image url(../img/avatar.jpg)
      background-size 100%
      background-position center
      transition all .4s
      &:hover
        box-shadow 0 0 4px rgba(0,0,0,.4)
        background-size 110%

.wrapper
  margin 0 50px
  margin-top 20px
  // background-color tomato
  overflow hidden

$post-title-margin = 20px
.content
  float left
  width 70%
  
  .post
    margin-right 30px
    margin-bottom 30px
    background-color #fff
    border-radius 2px
    border 1px solid rgba(100,100,100,.2)
    
    .wrapper
      margin 0
      padding $post-title-margin 30px
      padding-bottom 0
      .title
        font-size 1.4em
        margin 0
        margin-bottom $post-title-margin
        a
          color #757575
          text-decoration none
      .inner
        .center
          text-align center
        img
          max-width 100%
        .video
            margin 15px 0
            position relative
            padding-bottom 56.25%
          iframe
            border none
            position absolute
            left 0
            top 0
            width 100%
            height 100%

  .tags
    // background-color tomato
    ul
      list-style none
      padding-left 30px
      margin 0
      margin-bottom 20px
      li
        display inline-block
        margin 5px 0
        margin-right 20px
        padding 3px 5px
        border 1px solid rgba(100,100,100,.2)
        border-radius 2px
        a
          text-decoration none
          color #757575
  
  .footer
    border-top 1px solid rgba(100,100,100,.2)
    padding 10px 30px
    background-color #f9f9fb
    overflow hidden
    
    .left
      float left
      .raw
        display inline-block
        margin-right 20px
        line-height 50px
        // vertical-align middle
        text-decoration none
        color #666
        .icon
          display inline-block
          height 15px
          width  15px
          margin-right 5px
          line-height 15px
          vertical-align middle
          fill #666
          
          cursor pointer
          transition fill .3s
          &:hover
            fill $green
      
    .right
      float right
      overflow hidden
      .side
        float left
        // background-color red
        text-align right
        .author-name
          font-family 'Open Sans'
          color #4d4d4d
          text-decoration none
          &:hover
            text-decoration underline
          &:before
            content '@'
        .pub-data
          font-size .8em
          color #757575
          vertical-align sub
      .avatar
        float right
        padding-left 5px
        img
          width 45px

.sidebar
  float right
  width 30%
  
  .authorization
    background-color #fff
    text-align center
    margin-left 5px
    padding 20px
    padding-top 20px
    padding-bottom 0
    border 1px solid rgba(100,100,100,.2)
    border-radius 2px
    overflow hidden
    
    span
      display block
      font-weight bold
      margin-bottom 20px
      
    form
      .input
        margin 10px 0
        
        input
          padding 5px 15px
          box-sizing border-box
          width 100%
          font-family 'Roboto'
          border 1px solid rgba(100,100,100,.2)
          border-radius 2px
          
      .forgot-pass
        margin 10px

        a
          color #757575
          font-style italic
          font-size 0.8em
          text-decoration none

      #login
        display block
        width 100%
        padding 10px
        margin 10px auto
        background-color $green
        color #f4f4f4
        font-weight bold
        border none
        text-transform uppercase
        font-size .8em
        
        &:hover
          background-color #a1d379

    #register
      margin 20px
      
      a
        text-decoration none
        color $green
        text-transform uppercase
        font-size .8em